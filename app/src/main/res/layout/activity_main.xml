<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seankwek.nest.MainActivity">

    <Button
        android:id="@+id/stdOption"
        android:text="NEST"
        android:textSize="40sp"
        android:layout_width="180dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="76dp" />

    <Button
        android:id="@+id/leaveOption"
        android:text="Leave"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toLeftOf="@+id/medOption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/offOption"
        app:layout_constraintTop_toBottomOf="@+id/stdOption"
        app:layout_constraintHorizontal_bias="0.558" />

    <Button
        android:id="@+id/medOption"
        android:text="Medical"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/leaveOption"
        app:layout_constraintBottom_toTopOf="@+id/outOption"
        app:layout_constraintTop_toBottomOf="@+id/stdOption" />

    <Button
        android:id="@+id/offOption"
        android:text="Off"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toLeftOf="@+id/outOption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaveOption" />

    <Button
        android:id="@+id/outOption"
        android:text="Outstation"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/offOption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medOption" />

</android.support.constraint.ConstraintLayout>
