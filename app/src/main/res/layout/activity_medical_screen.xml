<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seankwek.nest.medicalScreen">

    <Button
        android:id="@+id/mcOption"
        android:text="Medical Leave"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="220dp"/>

    <Button
        android:id="@+id/maOption"
        android:text="Medical Appointment"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/rsOption"
        android:text="Report Sick"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mcOption"
        android:layout_marginTop="50dp"/>

</android.support.constraint.ConstraintLayout>
