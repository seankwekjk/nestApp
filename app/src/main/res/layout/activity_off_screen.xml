<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seankwek.nest.offScreen">

    <EditText
        android:id="@+id/offText"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:hint="Enter Reason for Off in Lieu:"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="340dp"/>

    <Button
        android:id="@+id/dutyOff"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Duty Off"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/inLieuOff"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Off in Lieu"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dutyOff"
        android:layout_marginTop="50dp"/>

</android.support.constraint.ConstraintLayout>
